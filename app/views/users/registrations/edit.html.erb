<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-6 text-center text-3xl font-bold text-gray-900">アカウント情報の編集</h2>
    <div class="mt-3">
      <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name),
                method: :put, local: true, html: { class: 'mt-8 space-y-6 sm:mx-auto sm:w-full sm:max-w-md' }) do |f| %>
      <%= render 'devise/shared/error_messages', resource: %>

      <div class="space-y-4">
        <div>
          <%= f.text_field :username, autofocus: true, autocomplete: 'username',
                                      placeholder: t('devise.registrations.new.username'),
                                      class: 'appearance-none rounded-md relative block w-full px-3 py-2 border
                                              border-gray-300 text-gray-900 placeholder-gray-500
                                              focus:outline-none focus:ring-sky-500 focus:border-sky-500
                                              sm:text-sm sm:leading-5' %>
        </div>
        <div>
          <%= f.email_field :email, autofocus: true, autocomplete: 'email',
                                    placeholder: t('devise.registrations.new.email'),
                                    class: 'appearance-none rounded-md relative block w-full px-3 py-2 border
                                            border-gray-300 text-gray-900 placeholder-gray-500
                                            focus:outline-none focus:ring-sky-500 focus:border-sky-500
                                            sm:text-sm sm:leading-5' %>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          < class="text-gray-700"><%= t('devise.registrations.new.waiting_confirmation',
                                          email: resource.unconfirmed_email) %></div>
        <% end %>
        <div>
          <i class="text-sm text-gray-900"><%= t('devise.registrations.new.minimum_password_length') %></i>
          <%= f.password_field :password, autocomplete: 'new-password',
                                          placeholder: t('devise.registrations.new.password'),
                                          class: 'appearance-none rounded-md relative block w-full px-3 py-2
                                                  border border-gray-300 text-gray-900 placeholder-gray-500
                                                  focus:outline-none focus:ring-sky-500 focus:border-sky-500
                                                  sm:text-sm sm:leading-5' %>
        </div>
        <div>
          <%= f.password_field :password_confirmation, autocomplete: 'new-password',
                                                      placeholder: t('devise.registrations.new.password_confirmation'),
                                                      class: 'appearance-none rounded-md relative block w-full px-3 py-2
                                                              border border-gray-300 text-gray-900 placeholder-gray-500
                                                              focus:outline-none focus:ring-sky-500 focus:border-sky-500
                                                              sm:text-sm sm:leading-5' %>
        </div>
        <div>
          <i>確認のため現在のパスワードを入力してください</i><br>
          <%= f.password_field :current_password, autocomplete: 'current-password',
                                          placeholder: t('devise.registrations.new.password'),
                                          class: 'appearance-none rounded-md relative block w-full px-3 py-2
                                                  border border-gray-300 text-gray-900 placeholder-gray-500
                                                  focus:outline-none focus:ring-sky-500 focus:border-sky-500
                                                  sm:text-sm sm:leading-5' %>
        </div>
        <%= f.submit 'アカウント情報を更新', class: 'bg-sky-100 text-gray-700 hover:bg-sky-500 hover:text-orange-300 font-bold py-2 px-4 rounded-lg shadow-xl text-center w-full'%>
      </div>
    <% end %>
    </div>
      <%= button_to '退会する', registration_path(resource_name),
                                        class: 'mt-3 bg-red-100 text-gray-700 hover:bg-red-500 hover:text-stone-300 font-bold py-2 px-4 rounded-lg shadow-xl text-center w-full',
                                        data: {turbo_confirm: 'アカウントを削除します。よろしいですか？' }, method: :delete %>
    <div class="mt-3 text-center">
      <%= link_to 'マイページへ', account_path, class: 'text-sky-500 hover:text-orange-300 text-center' %>
    </div>
  </div>
</div>
