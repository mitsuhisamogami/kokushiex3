<div data-banner="guest-upgrade"
     class="relative mb-6 rounded-lg border border-amber-200 bg-amber-50 p-5 text-sm text-amber-900 shadow">
  <button type="button"
          class="absolute right-3 top-3 text-amber-300 transition-colors hover:text-amber-500"
          aria-label="<%= t('guest_upgrade_card.dismiss') %>"
          onclick="this.closest('[data-banner=\'guest-upgrade\']').style.display='none';">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
    </svg>
  </button>

  <div class="flex items-start gap-3">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-amber-500" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd"
            d="M10 18a8 8 0 100-16 8 8 0 000 16zM9 7a1 1 0 112 0 1 1 0 01-2 0zm1 2a1 1 0 00-1 1v4a1 1 0 102 0v-4a1 1 0 00-1-1z"
            clip-rule="evenodd" />
    </svg>
    <div>
      <p class="font-semibold"><%= t('guest_upgrade_card.title') %></p>
      <p class="mt-1 text-xs leading-relaxed">
        <%= t('guest_upgrade_card.body_html') %>
      </p>
    </div>
  </div>

  <div class="mt-4 flex justify-center sm:justify-end">
    <%= link_to t('guest_upgrade_card.cta'),
                edit_user_registration_path,
                class: %w[
                  rounded-full border border-amber-200 bg-amber-100 px-4 py-1.5
                  text-xs font-semibold text-amber-800 transition-colors
                  hover:bg-amber-400 hover:text-white
                ] %>
  </div>
</div>
