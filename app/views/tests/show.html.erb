<!-- 問題登録後パーシャル化 -->
<div class='flex flex-wrap flex-grow text-gray-600 body-font'>
  <div class='w-full max-w-4xl m-auto'>
    <% @questions.each do |question| %>
    <div class='flex mb-10'>
      <div class='w-full h-full border-2 border-gray-200 border-opacity-60 rounded-lg overflow-hidden shadow-xl'>
        <div class='m-5'>
          <!-- 問題番号 -->
          <div class='font-bold'><%= @test.year %><%= @test.session %><%= question.question_number %></div>
          <!-- 問題文 -->
          <div class='m-5'>
            <%= question.content %>
          </div>
          <!-- 図 -->
          <div class='flex justify-center'>
            <%= image_tag "/#{question.image_url}", size: 500 %>
          </div>
          <!-- 選択肢 -->
          <div>
            <ul>
              <% question.choices.each_with_index do |choice, index| %>
                <li>
                  <div class='flex items-center ps-3'>
                    <%= check_box_tag "response[choice_ids][]", choice.id, false, id: "select-#{question.id}-#{index + 1}", class: 'w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500' %>
                    <label for='select-<%= question.id %>-<%= index + 1 %>' class='w-full py-3 ms-2 text-sm font-medium text-gray-900'><%= choice.content %></label>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
